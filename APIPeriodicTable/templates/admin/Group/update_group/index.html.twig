{% extends 'base.html.twig' %}

{% block title %}Mise à jour d'un groupe {% endblock %}

{% block body %}
    <section>
        <article>
            <div class="container">
                <h1 class="text-center my-5">Mise à jour d'un groupe </h1>
                {{ form(form) }}
            </div>
        </article>
        <hr class="my-5">
        <article>
            <div class="container">
                <h1 class="text-center my-5">Suppression du groupe</h1>
                <div class="supprCata ">
                    <div>
                        <p>Attention, la suppression du groupe sera définitive et il ne pourra y avoir de retour en arrière possible.</p>
                    </div>
                    <div>
                        <a href="{{ path('app_delete_group', {id: app.request.attributes.get('id')}) }}"><button type="button" class="btn btn-danger">Supprimer</button></a>
                    </div>
                </div>
            </div>
        </article>
    </section>
{% endblock %}
