<article class="adminTable">
    <h5>Merci de sélectionner l'élément que vous souhaitez modifier.</h5>
    <div class="my-2 groupCard">
        {% for Atom in Atoms %}
            <div class="card cardAtom">
                <a href="{{ path('app_update_atom', {id: Atom.id}) }}">
                    <div class="card-body">
                        <div class="CardSymbole text-center">{{ Atom.symbole }}</div>
                        <div class=" CardNumber text-center"><strong>{{ Atom.numero }}</strong></div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</article>
